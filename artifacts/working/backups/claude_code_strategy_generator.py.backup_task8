            recommended_template = recommendation.template_name
            suggested_params = recommendation.suggested_params

            logger.info(f"Suggested parameters: {suggested_params}")

            # Task 4: Instantiate template class with suggested parameters
            try:
                # Get template class from mapping
                if recommended_template not in TEMPLATE_MAPPING:
                    raise ValueError(
                        f"Unknown template name: {recommended_template}. "
                        f"Available templates: {list(TEMPLATE_MAPPING.keys())}"
                    )

                template_class = TEMPLATE_MAPPING[recommended_template]
                logger.info(f"Instantiating {recommended_template} template class: {template_class.__name__}")

                # Instantiate template (no constructor parameters - params go to generate_strategy)
                template_instance = template_class()
                logger.info(
                    f"Successfully instantiated {recommended_template} template. "
                    f"Suggested params for generate_strategy: {suggested_params}"
                )

                # TODO: Tasks 5-7 will complete strategy generation and validation
                # Task 5: Call template.generate_strategy() to get unique strategy code
                # Task 6: Validate generated code meets ‚â•80% uniqueness target
                # Task 7: Fallback to champion template if recommendation fails

                raise NotImplementedError(
                    f"Iteration {iteration}: Task 4 complete - {recommended_template} template instantiated. "
                    f"Tasks 5-7 will implement strategy generation and validation. "
                    f"Template instance: {template_instance}"
                )

            except Exception as instantiation_error:
                logger.error(
                    f"Template instantiation failed for {recommended_template}: {instantiation_error}",
                    exc_info=True
                )
                # Re-raise for Task 8 (retry logic) to handle
                raise

        except Exception as e:
            logger.error(f"Template recommendation failed: {e}", exc_info=True)

            # Task 7: Fallback to random template selection when recommendation fails
            logger.warning(
                f"‚ö†Ô∏è  FALLBACK MODE ACTIVATED for iteration {iteration}: "
                f"Template recommendation failed with error: {str(e)}"
            )

            # Check if all 4 templates have been used in recent 5 iterations
            all_templates = set(TEMPLATE_MAPPING.keys())
            recent_template_set = set(recent_templates) if recent_templates else set()

            if len(recent_template_set) == len(all_templates) and len(recent_templates) >= 4:
                # All 4 templates used in recent iterations - select least recently used
                logger.info(
                    f"üîÑ All {len(all_templates)} templates used in recent {len(recent_templates)} iterations. "
                    f"Selecting least recently used template for diversity."
                )

                # Find least recently used template
                # Count occurrences in recent_templates (most recent = end of list)
                template_last_position = {}
                for template in all_templates:
                    if template in recent_templates:
                        # Find last occurrence position (higher = more recent)
                        last_idx = len(recent_templates) - 1 - recent_templates[::-1].index(template)
                        template_last_position[template] = last_idx
                    else:
                        # Not in recent list - highest priority
                        template_last_position[template] = -1

                # Select template with lowest position (least recently used)
                recommended_template = min(template_last_position.items(), key=lambda x: x[1])[0]
                logger.info(
                    f"‚úÖ Selected least recently used template: {recommended_template} "
                    f"(last position: {template_last_position[recommended_template]})"
                )
            else:
                # Not all templates used - select random template not in recent list
                available_templates = list(all_templates - recent_template_set)

                if not available_templates:
                    # Edge case: no available templates (shouldn't happen but handle gracefully)
                    available_templates = list(all_templates)
                    logger.warning(
                        f"‚ö†Ô∏è  No unused templates available despite diversity check. "
                        f"Selecting random from all templates."
                    )

                recommended_template = random.choice(available_templates)
                logger.info(
                    f"üé≤ Selected random template not in recent usage: {recommended_template} "
                    f"(recent: {recent_templates}, available: {available_templates})"
                )

            # Generate default suggested parameters (empty dict for conservative defaults)
            suggested_params = {}
            logger.info(
                f"Using default parameters for fallback template {recommended_template}: {suggested_params}"
            )

            logger.info(
                f"üìã Fallback template selected: {recommended_template} | "
                f"Default parameters: {suggested_params} | "
                f"Reason: Recommendation system failure"
            )

            # Task 4: Instantiate template class with default parameters
            try:
                # Get template class from mapping
                if recommended_template not in TEMPLATE_MAPPING:
                    raise ValueError(
                        f"Unknown template name: {recommended_template}. "
                        f"Available templates: {list(TEMPLATE_MAPPING.keys())}"
                    )

                template_class = TEMPLATE_MAPPING[recommended_template]
                logger.info(f"Instantiating {recommended_template} template class: {template_class.__name__}")

                # Instantiate template (no constructor parameters - params go to generate_strategy)
                template_instance = template_class()
                logger.info(
                    f"Successfully instantiated {recommended_template} template (fallback mode). "
                    f"Default params for generate_strategy: {suggested_params}"
                )

                # TODO: Tasks 8-9 will complete strategy generation and validation
                # Task 8: Call template.generate_strategy() to get unique strategy code
                # Task 9: Validate generated code meets ‚â•80% uniqueness target

                raise NotImplementedError(
                    f"Iteration {iteration}: Task 7 complete - Fallback to {recommended_template} template successful. "
                    f"Tasks 8-9 will implement strategy generation and validation. "
                    f"Template instance: {template_instance}"
                )

            except Exception as instantiation_error:
                logger.error(
                    f"Template instantiation failed for fallback template {recommended_template}: {instantiation_error}",
                    exc_info=True
                )
                # Re-raise for Task 10 (retry logic) to handle
                raise

    logger.info(f"Generated strategy code: {len(code)} chars")
    return code


